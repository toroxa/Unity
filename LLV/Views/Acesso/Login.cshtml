@model LLV.Models.UsuarioModel

@{
    Layout = null;
    ViewBag.Title = "LLV Auto - Sadecar";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta name="description" content="login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <!--Fonts-->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300" rel="stylesheet" type="text/css">
</head>
<!--Head Ends-->
<!--Body-->
<body>
    @using (Html.BeginForm("Login", "Acesso", FormMethod.Post, new { @class = "form-signin", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <h2 class="form-signin-heading">Please login</h2>
            <h2 class="form-signin-heading">Please sign in</h2>
            @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder = "Digite aqui seu Usuário" })
            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @placeholder = "Digite aqui sua Senha" })
            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
    }
</body>
</html>